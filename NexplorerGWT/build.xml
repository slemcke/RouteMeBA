<?xml version="1.0"?>
<project
    name="RouteMe"
    basedir="."
    default="buildwar" >

    <target
        name="default"
        depends="buildwar,deploy" >
    </target>

    <target name="buildwar" >

        <war
            basedir="war"
            destfile="ROOT.war"
            webxml="war/WEB-INF/web.xml" >

            <exclude name="WEB-INF/**" />
            <webinf dir="war/WEB-INF/" >
                <include name="**/*.jar" />
                <include name="**/classes/**" />
                <include name="**/deploy/**" />
                <include name="**/settings.xml" />
            </webinf>
        </war>
    </target>

    <target name="deploy" >

        <copy
            file="ROOT.war"
            todir="." />
    </target>

</project>